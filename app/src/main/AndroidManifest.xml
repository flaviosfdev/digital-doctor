<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flaviosf.digitaldoctor">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.flaviosf.digitaldoctor.feature.profile.view.SetupProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.flaviosf.digitaldoctor.feature.doctor.view.DoctorActivity"
            android:exported="false" />
        <activity
            android:name="com.flaviosf.digitaldoctor.feature.onboarding.view.OnboardingActivity"
            android:exported="false" />
        <activity
            android:name="com.flaviosf.digitaldoctor.feature.auth.view.AuthActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.flaviosf.digitaldoctor.feature.splash.view.SplashActivity"
            android:exported="false" />
    </application>

</manifest>